<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h2>Title:</h2>
  <p><%= @book.title %></p>
 <h2>Body</h2>
  <p><%= @book.body %></p>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <div></div>
 <span><%= link_to "edit", edit_book_path(@book) %></span>
 <span><%= link_to "Back", books_path %></span>
