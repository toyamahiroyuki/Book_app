<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Book1</h1>
 <table class="table">
  <tr>
    <th>Title</th><th>Boby</th>
  </tr>
 <% @books.each do |book| %>
  <tr class="table-box">
    <th><%= book.title %></th>
    <th><%= book.body %></th>
    <th class="box"><%= link_to "show", book_path(book.id) %></th>
    <th class="box"><%= link_to "edit", edit_book_path(book.id) %></th>
    <th class="box"><%= link_to "destroy", book_path(book.id), method: :delete %></th>
  </tr>
 <% end %>
</table>

<h1>New book</h1>
<%=form_for(@book) do |f| %>
  <% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>Body</h4>
  <%= f.text_area :body %>
 <div></div>
  <%= f.submit "Create Book" %>

<% end %>
