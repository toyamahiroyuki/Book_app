<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_field :body %>
  <div></div>
  <%= f.submit "update Book" %>
  <div></div>
   <span><%= link_to "Show", book_path(@book) %></span>
   <span><%= link_to "Back", books_path(@book) %></span>
<% end %>